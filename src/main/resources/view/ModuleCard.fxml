<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER_LEFT" minHeight="105">
        <padding>
            <javafx.geometry.Insets top="5" right="5" bottom="5" left="15" />
        </padding>
        <HBox spacing="5" alignment="CENTER_LEFT">
            <Label fx:id="moduleCodeLabel" styleClass="cell_big_label">
                <minWidth>
                    <!-- Ensures that the label text is never truncated -->
                    <Region fx:constant="USE_PREF_SIZE" />
                </minWidth>
            </Label>
            <Label fx:id="tutorialClassLabel" styleClass="cell_big_label" />
        </HBox>
    </VBox>
</HBox>
